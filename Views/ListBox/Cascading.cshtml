@section SampleHeading{
    <span class="sampleName">ListBox / Cascading</span>}
@section ControlsSection{
    <div class="frame">
        <div class="row">
            <div class="contents">
                <span class="txt">Select group</span>
                <ej-list-box id="groupsList" datasource="ViewBag.datasource" cascade-to="countryList">
                    <e-list-box-fields value="parentId" />
                </ej-list-box>                

            </div>
            <div class="contents col-sm-offset-2">
                <span class="txt">Select country</span>
                <ej-list-box id="countryList" datasource="ViewBag.datasource" load-data-on-init="false"></ej-list-box>                
            </div>
        </div>
    </div>
}
@section StyleSection{
    <style class="cssStyles">
        .txt {
            display: block;
            margin-bottom: 12px;
            font-weight: 600;
        }
        
        .contents {
            padding-left: 36px;
            position: relative;
            margin: 0 auto;
            float: left;
        }

        .content-container-fluid .row {
            margin: 0;
        }

        .frame {
            width: 500px;
        }
    </style>
}